@model mesqr.Models.RegisterModel

@{
    ViewBag.Title = "Register";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Create a new account.</h2>
</hgroup>

<p class="message-info">
    Passwords must be at least @Membership.MinRequiredPasswordLength characters long.
</p>

<div class="well">
@using (Html.BeginForm()) {
    @Html.ValidationSummary()

    <fieldset class="form-horizontal">
        <legend>Registration Form</legend>

        <div class="control-group">
            <label class="control-label" for="UserName">UserName</label>
            <div class="controls">
                @Html.TextBoxFor(m => m.UserName)
            </div>
        </div>

        <div class="control-group">
            <label class="control-label" for="Email">Email</label>
            <div class="controls">
                @Html.TextBoxFor(m => m.Email)
            </div>
        </div>

        <div class="control-group">
            <label class="control-label" for="Password">Password</label>
            <div class="controls">
                @Html.TextBoxFor(m => m.Password)
            </div>
        </div>

        <div class="control-group">
            <label class="control-label" for="ConfirmPassword">ConfirmPassword</label>
            <div class="controls">
                @Html.TextBoxFor(m => m.ConfirmPassword)
            </div>
        </div>

        <div class="form-actions">
            <input type="submit" value="Register" class="btn btn-primary" />
        </div>
    </fieldset>
}
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
